# API Configuration Example for Gideon.AI Dashboard
# Copy this file to .env.local and fill in your actual values

# Weather API (OpenWeatherMap)
NEXT_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here
NEXT_PUBLIC_WEATHER_CITY=San Francisco
NEXT_PUBLIC_WEATHER_UNITS=imperial

# Apple Health
NEXT_PUBLIC_APPLE_HEALTH_CLIENT_ID=your_apple_health_client_id
NEXT_PUBLIC_APPLE_HEALTH_REDIRECT_URI=your_redirect_uri
APPLE_HEALTH_CLIENT_SECRET=your_apple_health_client_secret

# News API
NEXT_PUBLIC_NEWS_API_KEY=your_news_api_key
NEXT_PUBLIC_NEWS_COUNTRY=us
NEXT_PUBLIC_NEWS_CATEGORY=technology,business

# iMessage Bridge (for local Mac integration)
IMESSAGE_BRIDGE_HOST=192.168.1.100
IMESSAGE_BRIDGE_PORT=8745
IMESSAGE_BRIDGE_TOKEN=your_imessage_bridge_token

# LinkedIn
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
NEXT_PUBLIC_LINKEDIN_REDIRECT_URI=your_redirect_uri

# Instagram
NEXT_PUBLIC_INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI=your_redirect_uri

# Gmail
NEXT_PUBLIC_GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
NEXT_PUBLIC_GMAIL_REDIRECT_URI=your_redirect_uri

# Spotify
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Google Calendar
NEXT_PUBLIC_GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
NEXT_PUBLIC_CALENDAR_ID=primary

# Quotes API
NEXT_PUBLIC_QUOTES_API_URL=https://api.quotable.io
NEXT_PUBLIC_QUOTES_API_KEY=your_quotes_api_key

# Todoist
NEXT_PUBLIC_TODOIST_API_TOKEN=your_todoist_api_token

# Oura Ring (Sleep Tracking)
NEXT_PUBLIC_OURA_CLIENT_ID=your_oura_client_id
OURA_CLIENT_SECRET=your_oura_client_secret
NEXT_PUBLIC_OURA_REDIRECT_URI=your_redirect_uri

# Database
DATABASE_URL=your_database_url
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Voice/AI Integration (Groq for speech-to-text)
NEXT_PUBLIC_GROQ_API_KEY=your_groq_api_key

# External API Base URL (for Gmail/Calendar integration)
NEXT_PUBLIC_API_BASE_URL=your_external_api_url

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_COMMANDS=true
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_EXPORT_FEATURE=true
NEXT_PUBLIC_ENABLE_FOCUS_MODE=true

# Rate Limits
WEATHER_API_CALLS_PER_MINUTE=60
NEWS_API_CALLS_PER_DAY=1000

# General Settings
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/Los_Angeles
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=error